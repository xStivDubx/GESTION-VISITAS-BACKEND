{
  "compilerOptions": {
    "rootDir": "./",
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  // include package.json in the compilation that is one level above the rootDir
  "include": [ "./**/*.ts"],
  "exclude": ["node_modules","dist",".env"]
}
